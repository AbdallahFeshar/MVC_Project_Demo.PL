@using MVC_Project_Demo.DAL.Models

@model IEnumerable<Department>
 

<h1>All Department</h1>
<br/>
<br/>
<br/>
<br/>
<a asp-controller="Department" asp-action="create" class="btn btn-danger"> Create New Department</a>

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">

        <thead>
            <tr>
                <th>@Html.DisplayNameFor(D=>D.Code)</th>
                <th>@Html.DisplayNameFor(D=>D.Name)</th>
                <th>@Html.DisplayNameFor(D=>D.DateOfCreation)</th>
                <th>Detalis</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var depatment in Model)
            {
                <tr>
                    <th>@depatment.Code</th>
                    <th>@depatment.Name</th>
                    <th>@depatment.DateOfCreation</th>
                    <th>
                        <a asp-action="Details" asp-route-id="@depatment.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>
                            Details
                        </a>
                    </th>
                    <th>
                        <a asp-action="Edit" asp-route-id="@depatment.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>
                            Update
                        </a>
                    </th>
                    <th>
                        <a asp-action="Delete" asp-route-id="@depatment.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </th>
                </tr>
            }
        </tbody>


    </table>

}
else
{
    <div class="mt-5 alert-danger">
        <h2>

         There is No Department
            
        </h2>

    </div> 
}